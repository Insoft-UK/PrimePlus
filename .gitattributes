# Normalize line endings
* text=auto

.gitattributes linguist-generated=true
.gitignore     linguist-generated=true
.editorconfig  linguist-generated=true
.clang-format  linguist-generated=true

# PPL files
*.ppl        linguist-language=PPL
*.prgm       linguist-language=PPL
*.hpprgm     linguist-language=PPL
*.hpappprgm  linguist-language=PPL
*.ppl+       linguist-language=PPL+
*.prgm+      linguist-language=PPL+

