# Normalize line endings
* text=auto

# Ignore everything by default
* linguist-ignore

# PPL files (count & highlight)
*.ppl        linguist-ignore=false linguist-language=PPL
*.prgm       linguist-ignore=false linguist-language=PPL
*.hpprgm     linguist-ignore=false linguist-language=PPL
*.hpappprgm  linguist-ignore=false linguist-language=PPL
*.ppl+       linguist-ignore=false linguist-language=PPL+
*.prgm+      linguist-ignore=false linguist-language=PPL+

assets/**    linguist-generated=true
Makefile     linguist-generated=true
*.sh         linguist-generated=true
*.txt        linguist-generated=true
*.rtf        linguist-generated=true
*.xml        linguist-generated=true
*.json       linguist-generated=true
*.png        linguist-generated=true
*.storyboard linguist-generated=true
*.png        linguist-generated=true
*.bmp        linguist-generated=true
*.yml        linguist-generated=true
